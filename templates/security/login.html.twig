{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="login_register_wrap section mt-5">
		<div class="container mt-5">
			<div class="row justify-content-center mt-5">
				<div class="col-xl-6 col-md-10 mb-3 mt-5">
					<div class="login_wrap mt-5">
						<div class="padding_eight_all bg-white mt-5">
							<div class="heading_s1 mt-5">
								<h3>Login</h3>
								<form method="post">
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}

									{% if app.user %}
										<div class="mb-3">
											You are logged in as
											{{ app.user.username }},
											<a href="{{ path('app_logout') }}">Logout</a>
										</div>
									{% endif %}

									<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
									<label for="inputEmail">Email</label>
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
									<label for="inputPassword">Password</label>
									<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


									<button class="btn btn-lg btn-primary btn-block mt-5" type="submit">
										Sign in
									</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
